{
  "projectName": "E-commerce Order Automation",
  "projectDescription": "Automated order processing, fulfillment, and customer communication system",
  "projectSlug": "ecommerce-auto",
  "services": {
    "n8n": {
      "workflowId": "NEW_WORKFLOW_ID_HERE", 
      "workflowName": "ecommerce-order-workflow",
      "webhookPath": "order-webhook"
    },
    "airtable": {
      "baseId": "NEW_AIRTABLE_BASE_ID",
      "keyTables": ["Orders", "Customers", "Products", "Fulfillment", "Notifications"]
    },
    "integrations": [
      "shopify",
      "shipstation",
      "stripe", 
      "sendgrid"
    ]
  },
  "framework": {
    "agentSystem": true,
    "mcpTools": true,
    "testingFramework": true,
    "backupSystem": true
  },
  "customization": {
    "patterns": [
      "00-order-field-normalization.txt",
      "01-inventory-tracking-patterns.txt", 
      "02-customer-communication-patterns.txt",
      "03-fulfillment-automation-patterns.txt"
    ],
    "fieldMappings": {
      "primaryEntity": "orders",
      "keyFields": ["order_id", "customer_email", "total_price", "order_status"],
      "enrichmentFields": ["customer_segment", "product_categories", "shipping_method", "payment_status"]
    },
    "testingFocus": [
      "order_field_mapping",
      "inventory_validation",
      "payment_processing",
      "fulfillment_automation",
      "customer_notifications"
    ],
    "requiredScripts": [
      "git-workflow.sh",
      "work-start.sh", 
      "real-n8n-export.sh",
      "auto-backup.sh",
      "inventory-sync.sh",
      "order-monitor.sh"
    ]
  },
  "businessLogic": {
    "primaryFlow": "Order Created → Validation → Inventory Check → Payment Verification → Fulfillment → Customer Notification",
    "keyDecisionPoints": [
      "Inventory availability check",
      "Payment validation",
      "Shipping method selection",
      "Customer communication triggers"
    ]
  }
}